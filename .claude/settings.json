{
  "mcpServers": {
    "mui-docs": {
      "command": "npx",
      "args": ["mui-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "search_components",
        "get_component_docs",
        "search_api",
        "get_api_docs",
        "search_guides",
        "get_guide_content",
        "search_icons",
        "get_icon_info"
      ]
    },
    "react-docs": {
      "command": "npx",
      "args": ["react-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "search_docs",
        "get_doc_content",
        "search_hooks",
        "get_hook_docs"
      ]
    },
    "web-docs": {
      "command": "npx",
      "args": ["mdn-mcp-server@latest"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "search_mdn",
        "get_mdn_content",
        "search_css",
        "get_css_docs"
      ]
    },
    "playwright": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-playwright"],
      "env": {
        "FASTMCP_LOG_LEVEL": "ERROR"
      },
      "disabled": false,
      "autoApprove": [
        "playwright_screenshot",
        "playwright_click",
        "playwright_fill",
        "playwright_navigate",
        "playwright_get_text"
      ]
    },
    "github": {
      "command": "npx",
      "args": ["@modelcontextprotocol/server-github"],
      "env": {
        "GITHUB_PERSONAL_ACCESS_TOKEN": ""
      },
      "disabled": false,
      "autoApprove": [
        "search_repositories",
        "get_repository",
        "list_issues",
        "get_issue",
        "create_issue"
      ]
    }
  },
  "projectContext": {
    "name": "Earthquake Monitoring Dashboard",
    "description": "Real-time earthquake visualization with React, Redux, and Material-UI",
    "techStack": [
      "React 18",
      "Redux Toolkit",
      "Material-UI v5",
      "Leaflet",
      "Vite",
      "Vitest"
    ],
    "keyFeatures": [
      "Real-time USGS earthquake data",
      "Interactive Leaflet maps",
      "Advanced filtering system",
      "Material-UI components",
      "Responsive design",
      "Performance optimization"
    ],
    "architecture": {
      "stateManagement": "Redux Toolkit with feature-based slices",
      "styling": "Material-UI with custom theme",
      "mapping": "Leaflet with React-Leaflet",
      "testing": "Vitest + React Testing Library",
      "bundling": "Vite"
    }
  },
  "developmentGuidelines": {
    "codeStyle": {
      "components": "Functional components with hooks",
      "stateManagement": "Redux Toolkit slices",
      "styling": "MUI sx prop and theme-based styling",
      "imports": "ES6 modules with .js extensions"
    },
    "conventions": {
      "fileNaming": "PascalCase for components, camelCase for utilities",
      "folderStructure": "Feature-based organization",
      "testing": "Component tests for UI, unit tests for utilities"
    },
    "performance": {
      "mapOptimization": "Marker clustering for large datasets",
      "stateOptimization": "Memoized selectors and selective subscriptions",
      "bundleOptimization": "Code splitting and tree shaking"
    }
  },
  "commonPatterns": {
    "reduxUsage": {
      "hooks": "useAppSelector and useAppDispatch from app/hooks.js",
      "slices": "Feature-based slices with RTK createSlice",
      "selectors": "Memoized selectors for derived state"
    },
    "muiPatterns": {
      "theming": "Custom theme in theme/muiTheme.js",
      "styling": "sx prop for component-specific styles",
      "responsiveness": "theme.breakpoints for responsive design",
      "colors": "theme.palette for consistent color usage"
    },
    "mapPatterns": {
      "markers": "Custom earthquake markers with magnitude-based styling",
      "clustering": "Leaflet.markercluster for performance",
      "events": "Map event handlers for state synchronization"
    }
  }
}
